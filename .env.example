# Example environment for local development
NODE_ENV=development
PORT=3000
LOGGER_LEVEL=log

# Database (Postgres)
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=nestjs_app
DB_SYNCHRONIZE=true
DB_LOGGING=false

# Redis
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Security
ALLOWED_APPLICATIONS=medusajs-storefront,medusajs-admin,mobile-app
ADMIN_API_KEY=otp-admin-key-CHANGE-THIS-TO-A-SECURE-RANDOM-STRING

# Throttling (opcionales, valores por defecto)
THROTTLER_SHORT_TTL=1000
THROTTLER_SHORT_LIMIT=3
THROTTLER_MEDIUM_TTL=60000
THROTTLER_MEDIUM_LIMIT=100

# OTP settings
OTP_MAX_ATTEMPTS=3
OTP_MAX_RESEND_COUNT=5
OTP_EXPIRY_MINUTES=10
OTP_BLOCK_DURATION_MINUTES=15
OTP_RESEND_COOLDOWN_SECONDS=60
OTP_RATE_LIMIT_MAX=5
OTP_RATE_LIMIT_WINDOW_SECONDS=900
